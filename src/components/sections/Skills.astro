---
import Section from "@/components/Section.astro";

import { skills, softskills } from "@cv"
---

<Section title="Habilidades - Junior">
    <ul>
        {
            skills.map(({ name}) => (
                <li>
                    <span> {name}</span>
                </li>
            ))
        }
    </ul>
</Section>
<Section title="Habilidades Blandas">
    <ul>
        {
            softskills.map(({ name}) => (
                <li>
                    <span>{name}</span>
                </li>
                ))
        }
    </ul>
</Section>

<style>
    ul {
      display: inline-flex;
      gap: 8px;
      flex-wrap: wrap;
    }
  
    li {
      border-radius: 6px;
      background: #333;
      color: white;
      font-size: 0.9rem;
      font-weight: 500;
      padding: 0.3rem 0.6rem;
    }
  </style>